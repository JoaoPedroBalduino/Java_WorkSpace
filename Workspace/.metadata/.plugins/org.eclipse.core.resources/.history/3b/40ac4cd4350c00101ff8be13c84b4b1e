package udemy_java_2;

import java.util.Locale;
import java.util.Scanner;

public class Aula_20 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		Locale.setDefault(Locale.US);

		System.out.println("<< Enter the measures of triangle Y >> ");
		System.out.print("Digite o lado 1 do triangulo Y: ");
		double lado_1_y = sc.nextDouble();
		System.out.print("Digite o lado 2 do triangulo Y: ");
		double lado_2_y = sc.nextDouble();
		System.out.print("Digite o lado 3 do triangulo Y: ");
		double lado_3_y = sc.nextDouble();
		
		double p_1 = peg(lado_1_y,lado_2_y,lado_3_y);
		
		System.out.println("<< Enter the measures of triangle X >> ");
		System.out.print("Digite o lado 1 do triangulo X: ");
		double lado_1_x = sc.nextDouble();
		System.out.print("Digite o lado 2 do triangulo X: ");
		double lado_2_x = sc.nextDouble();
		System.out.print("Digite o lado 3 do triangulo X: ");
		double lado_3_x = sc.nextDouble();
	
		double p_2 = peg(lado_1_x,lado_2_x,lado_3_x);
		
		double maior = Math.max(p_1, p_2);
		
		System.out.println("Triangle Y area: "+ p_1);
		System.out.println("Triangle X area: "+ p_2);
		System.out.println("Larger area: "+ maior);
	
		sc.close();
	}//chave da função

	public static double peg(double x, double y, double z) {
		Locale.setDefault(Locale.US);
		double aux = (x + y + z)/2;
		return aux;
		
	}
	
	
	
}//chave da classe 
